                <span>Great job!</span>
                </div>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <div class="modal-body-gam-car">
                <div class="great-noti">
                    <ul>
                    {{#rewardsdata}}
                        <li>
                            <div class="great-item {{class}}">
                                <div class="great-item-img"><img src="{{icon}}" alt=""></div>
                                <div class="great-item-txt">{{text}}</div>
                            </div>
                        </li>
                    {{/rewardsdata}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{{/showrewardsnoti}}

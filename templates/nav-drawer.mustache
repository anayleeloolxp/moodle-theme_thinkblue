{{!
    @template theme_boost/nav-drawer


    Example context (json): {}
}}
<div id="nav-drawer" data-region="drawer" class="d-print-none moodle-has-zindex {{^navdraweropen}}closed{{/navdraweropen}}" aria-hidden="{{#navdraweropen}}false{{/navdraweropen}}{{^navdraweropen}}true{{/navdraweropen}}" tabindex="-1">

    <div class="logo_side_container">
        <div data-region="drawer-toggle" class="d-inline-block mr-3">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn nav-link float-sm-left mr-1 btn-light bg-gray" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">{{#pix}}i/menubars{{/pix}}<span class="sr-only">{{#str}}sidepanel, core{{/str}}</span></button>
        </div>

        <a href="{{{ config.wwwroot }}}" class="navbar-brand has-logo d-none d-sm-inline ">
            <span class="logo d-none d-sm-inline">
				<img src="{{output.get_logo_url}}" alt="{{sitename}}">
			</span>
        </a>
    </div>

    <div class="leftnavcontainer">
        {{> theme_boost/flat_navigation }}
    </div>
    <div class="leftusermenu">
        <ul>
            <li class="nav-item">

                <div id="navleeloolxpchatcontainer" class="navleeloolxpchatcontainer popover-region collapsed l_hidden">
                    <a id="navleeloolxpchatbutton" class="nav-link d-inline-block popover-region-toggle position-relative" href="javascript:void(0);" role="button" onclick="toggle_widget();">
                        <i class="icon fa fa-commenting fa-fw " title="Toggle messaging drawer" aria-label="Toggle messaging drawer"></i>
                        <div class="l_chatcount count-container l_hidden" data-region="count-container" aria-label="">0</div>
                    </a>
                </div>

                {{{ output.navbar_plugin_output }}}
            </li>
            <!-- user_menu -->
            <li class="nav-item d-flex align-items-center">
                {{{ output.user_menu }}}
            </li>
        </ul>
    </div>
</div>
